
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Livros</h2>
<div ng-controller="livroCtrl">
    <div class="divList">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Idioma</th>
                    <th colspan="2">Opções</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="livro in livros">
                   
                    <td>{{livro.Id}}</td>
                    <td>{{livro.Nome}}</td>
                    <td>{{livro.Idioma}}</td>
                    <td><span class="btn btn-success btn-xs" ng-click="RetornarPorId(livro)"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;Editar</span></td>
                    <td><span class="btn btn-danger btn-xs" ng-click="Excluir(livro)"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span>&nbsp;Excluir</span></td>
                </tr>
            </tbody>
        </table>
        <span class="btn btn-primary btn-xl" ng-click="Novo()"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;Novo Livro</span>
        <div ng-show="divLivro">
            <p class="divHead"></p>
            <table class="table">
                <tr>
                    <td colspan="3"><b><i>{{Action}} Livro</i></b></td>
                </tr>
                <tr>
                    <td>Id:</td>
                   <td><input type="text" readonly="readonly" ng-model="livro.Id"/></td>
                </tr>
                <tr>
                    <td>Nome:</td>
                    <td><input type="text"  ng-model="livro.Nome"/></td>
                </tr>
                <tr>
                    <td>Idioma:</td>
                    <td>
                        <select ng-model="livro.Idioma"  ng-options="idioma for idioma in idiomas">
                            <option value="">Selecione um Idioma</option>
                        </select>
                    </td>
                </tr>
            </table>
            <span class="btn btn-success btn-xl" ng-click="Salvar()"><span class="glyphicon glyphicon-save" aria-hidden="true"></span>&nbsp;Salvar</span>
            <span class="btn btn-danger btn-xl" ng-click="Cancelar()"><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>&nbsp;Cancelar</span>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/app/livro");
}
