
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editoras</h2>
<div ng-controller="editoraCtrl">
    <div class="divList">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th colspan="2">Opções</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="editora in editoras">
                    <td>{{editora.Id}}</td>
                    <td>{{editora.Nome}}</td>
                    <td><span class="btn btn-success btn-xs" ng-click="RetornarPorId(editora)"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;Editar</span></td>
                    <td><span class="btn btn-danger btn-xs" ng-click="Excluir(editora)"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span>&nbsp;Excluir</span></td>
                </tr>
            </tbody>
        </table>
        <span class="btn btn-primary btn-xl" ng-click="Novo()"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;Novo Editora</span>
        <div ng-show="divEditora">
            <p class="divHead"></p>
            <table class="table">
                <tr>
                    <td colspan="3"><b><i>{{Action}} Editora</i></b></td>
                </tr>
                <tr>
                    <td>Id:</td>
                   <td><input type="text" readonly="readonly" ng-model="editora.Id"/></td>
                </tr>
                <tr>
                    <td>Nome:</td>
                    <td><input type="text"  ng-model="editora.Nome"/></td>
                </tr>
            </table>
            <span class="btn btn-success btn-xl" ng-click="Salvar()"><span class="glyphicon glyphicon-save" aria-hidden="true"></span>&nbsp;Salvar</span>
            <span class="btn btn-danger btn-xl" ng-click="Cancelar()"><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>&nbsp;Cancelar</span>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/app/editora");
}
